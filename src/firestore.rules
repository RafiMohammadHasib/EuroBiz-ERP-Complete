
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // --- Helper Functions ---
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Check for an 'admin' role in a specific 'user_roles' document.
      return isSignedIn() && get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Role Management ---
    // Only admins can read or write role documents.
    match /user_roles/{uid} {
      allow read, write: if isAdmin();
    }
    
    // --- Settings ---
    // Any signed-in user can read business and system settings. Admins can write.
    match /settings/business { 
      allow read: if isSignedIn(); 
      allow write: if isAdmin();
    }
    match /settings/system { 
      allow read: if isSignedIn(); 
      allow write: if isAdmin();
    }
    // A user can read and write to their OWN settings document.
    match /settings/{userId} {
      allow read, write: if isOwner(userId);
    }


    // --- Business-Wide Data ---
    // Admins have full read/write access. All other signed-in users have read-only access.
    match /commissions/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /distributors/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /finishedGoods/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /invoices/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /productionOrders/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /purchaseOrders/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /rawMaterials/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /salary_payments/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /sales_commissions/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }
    match /suppliers/{docId} { allow get, list: if isSignedIn(); allow write: if isAdmin(); }


    // --- User Profiles & Nested Data ---
    match /salespeople/{salespersonId} {
      allow get, update, delete: if isOwner(salespersonId);
      allow create: if isOwner(salespersonId) && request.resource.data.id == salespersonId;

       match /commissions/{commissionId} {
        allow read, write: if isOwner(salespersonId);
      }
    }

    match /customers/{customerId} {
      allow get, update, delete: if isOwner(customerId);
      allow create: if isOwner(customerId) && request.resource.data.id == customerId;
      allow list: if isSignedIn();

       match /invoices/{invoiceId} {
        allow read, write: if isOwner(customerId);

        match /outstanding_dues/{dueId} {
          allow read, write: if isOwner(customerId);
        }
      }
    }
  }
}
