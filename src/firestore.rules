
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // --- Helper Functions ---
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/user_roles/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Role Management ---
    match /user_roles/{uid} {
      allow read, write: if isAdmin();
    }
    
    // --- Settings ---
    match /settings/business { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /settings/system { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /settings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- Business-Wide Data ---
    // Admins have full access. All other authenticated users have read-only access.
    match /products/{productId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /distribution_channels/{dcId} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /distributors/{distributorId} { allow read, write: if isAdmin(); }
    match /suppliers/{supplierId} { allow read, write: if isAdmin(); }
    match /purchaseOrders/{poId} { allow read, write: if isAdmin(); }
    match /sales_commissions/{commissionId} { allow read, write: if isAdmin(); }
    match /invoices/{invoiceId} { allow read, write: if isAdmin(); }
    match /rawMaterials/{materialId} { allow read, write: if isAdmin(); }
    match /finishedGoods/{goodId} { allow read, write: if isAdmin(); }
    match /productionOrders/{prodId} { allow read, write: if isAdmin(); }
    match /commissions/{commissionId} { allow read, write: if isAdmin(); }
    match /salary_payments/{paymentId} { allow read, write: if isAdmin(); }


    // --- User Profiles & Nested Data ---
    match /salespeople/{salespersonId} {
      allow get, update, delete: if isOwner(salespersonId);
      allow create: if isOwner(salespersonId) && request.resource.data.id == salespersonId;

       match /commissions/{commissionId} {
        allow read, write: if isOwner(salespersonId);
      }
    }

    match /customers/{customerId} {
      allow get, update, delete: if isOwner(customerId);
      allow create: if isOwner(customerId) && request.resource.data.id == customerId;
      allow list: if isSignedIn();

       match /invoices/{invoiceId} {
        allow read, write: if isOwner(customerId);

        match /outstanding_dues/{dueId} {
          allow read, write: if isOwner(customerId);
        }
      }
    }
  }
}
